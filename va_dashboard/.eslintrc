{
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions" : {
        "ecmaVersion"  : 6,
        "sourceType"   : "module",
        "ecmaFeatures" : {
            "jsx":true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "jquery": true
    },
    "settings": {
        "react":{
            "pragma":"React",
            "version":"15.6.2"
        },
        "ecmascript": 6,
        "jsx": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "strict": 0,
        "quotes": 0,
        "no-unused-vars": 0,
        "camelcase": 0,
        "no-underscore-dangle": 1,
        "comma-dangle":[1,"never"],
        "indent":0,
        "react/jsx-indent":0,
        "react/jsx-equals-spacing": 0,
        "no-console":0,
        "max-len":0,
        "no-param-reassign":1,
        "key-spacing": 0,
        "no-multi-spaces": [
              2,
              {
                "exceptions":{
                    "VariableDeclarator":true,
                    "ImportDeclaration":true,
                    "JSXAttribute":true,
                    "AssignmentExpression":true
                }
              }
        ]
    }
}
